{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@jsx/*": ["./src/*"],
      "@clsDecimal": ["./src/components/clsDecimal/clsDecimal"],
      "@clsNavButton": ["./src/components/clsNavButton/clsNavButton"],
      "@clsSortable": ["./src/components/clsSortable/clsSortable"],
      "@clsCombo": ["./src/components/clsCombo/clsCombo"],
      "@clsLayouts": ["./src/(utilities)/layout"],
      "@clsInputs": ["./src/(utilities)/inputsFunctions"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
